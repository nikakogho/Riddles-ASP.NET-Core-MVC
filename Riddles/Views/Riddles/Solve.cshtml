@model Riddles.Models.Riddle

<h4>Solve the Riddle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Solve">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <p>@Html.DisplayFor(riddle => riddle.Question)</p>
            </div>
            <div class="form-group">
                <p>Written by @Html.DisplayFor(riddle => riddle.Author.Email)</p>
            </div>
            <div class="form-group">
                <label for="Answer" class="control-label"></label>
                <input name="Answer" class="form-control" />
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
